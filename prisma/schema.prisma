// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id          Int    @id @default(autoincrement())
  name        String @unique
  cost        Int
  power       Int
  description String
  pool        Int
  flavorText  String
  keyword     String
  
  @@index([pool, cost, power])
}

model User {
  id   Int    @id @default(autoincrement())
  name String
}
