// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id          Int    @id @default(autoincrement())
  name        String
  cost        Int
  power       Int
  description String
  pool        Pool
  flavorText  String
  keyword     Keyword
  // add field for release patch

  @@unique([name])
}

model Location {
  id Int @id @default(autoincrement())
  name String
  description String
  // effect LocationEffect
}

model LocationEffect{
  locationId Int @unique
  effectType EffectType
  action String
}

model CardEffect{
  cardId Int @unique
  effectType EffectType
  action String
}


model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  passSalt Int
  passHash String
  decks    Deck[]
  role     Role   @default(USER)

  @@unique([email])
}

model Deck {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int
  // cards Card[] (many to many relationship between decks and cards)
}

enum Role {
  USER
  ADMIN
}

enum Keyword {
  VANILLA
  REVEAL
  DESTROY
  ONGOING
  DISCARD
  MOVE
}

enum Pool {
  STARTER
  RECRUIT
  POOL_0
  POOL_1
  POOL_2
  POOL_3
  POOL_4
  POOL_5
}

enum EffectType {
  BUFF
  NERF
  SPECIAL
}
